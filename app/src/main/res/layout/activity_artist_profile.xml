<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black2">

    <include layout="@layout/toolbar"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blackAlpha"
                android:padding="16dp">

                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@color/white"/>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/artist_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="rodferod"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="4dp"
                            android:src="@color/white"/>

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/artist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="Felipe Rodrigues"/>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="4dp"
                            android:src="@color/white"/>

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/artist_styles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blackwork"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="4dp"
                            android:src="@color/white"/>

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/artist_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="rodferod"/>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="4dp"
                            android:src="@color/white"/>

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/artist_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="São Paulo/SP"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/artist_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blackAlphaDarker"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="16dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam at lectus tincidunt, mollis orci non, fringilla mi. Suspendisse finibus quam nec tellus vehicula, vitae varius lorem gravida. Integer vitae felis suscipit, sodales nisl in, semper dui. Duis et elit dui. Cras at accumsan metus, quis egestas urna. Sed egestas diam. "/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/artist_flash_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/artist_photo_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar orçamento"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:padding="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue"
            android:textStyle="bold"/>

    </RelativeLayout>
    
    

</LinearLayout>
